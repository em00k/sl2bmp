{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "Z:/zxenv/emulator/sjasmplus",
            "args": [
                "src/main.asm",
                "--zxnext=cspect",
                "--msg=war",
                "--fullpath",
                "--sym=sl2bmp.sym",
                "--sld=sl2bmp.sld",
                "--lst=sl2bmp.lst"
            ],
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*)\\((\\d+)\\):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            },
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Launch CSpect",
            "type": "shell",
            "command": "Z:/zxenv/emulator/cspect -w3 -brk -zxnext -nextrom -analytics -mmc=Z:/zxenv/sl2bmp/data/ -map=Z:/zxenv/sl2bmp/sl2bmp.map Z:/zxenv/sl2bmp/sl2bmp.NEX ",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}